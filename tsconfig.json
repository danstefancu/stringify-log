{
    "compilerOptions": {
        "declaration": true,
        "strict": true,
        "module":  "commonjs",
        "sourceMap": true,
        "removeComments": false,
        "outDir": "dist",
        "target" : "es2017",
        "watch": false,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "coverage",
        "node_modules",
        "!node_modules/@types",
        "**/*.spec.ts"
    ]
}